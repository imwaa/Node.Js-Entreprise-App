<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-header h2">
                Asign a task
            </div>
            <div class="card-body">
                <form action="/tasks/add-task" method="POST">
                    <div class="form-group">
                        <label for="role" class="h5">Task title:</label>
                        <input type="text" class="form-control" name="title" placeholder="Name" value="">
                    </div>

                    <div class="form-group">
                        <label for="description"class="h5">Task description:</label>
                        <textarea name="description" placeholder="description" class="form-control"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="employee"class="h5">Chose an employee:</label>
                        <select name="employee" class="custom-select">
                            {{#each Employee}}
                            <option value="{{name}}">{{name}}</option>
                            {{/each}}                        </select>
                    </div>

                    <div class="form-group">
                        <label for="client"class="h5">Chose a client:</label>
                        <select name="client" class="custom-select">
                            {{#each Clients}}
                            <option value="{{name}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="role"class="h5">Chose a date:</label>
                        <input type="date" class="form-control" name="taskDate">
                    </div>

                    <input type="hidden" name="status" value="Not Started">
                    <button class="btn btn-primary btn-block">
                        Add task
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>